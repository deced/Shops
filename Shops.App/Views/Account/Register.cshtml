@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Shops.App.Models.Identity.RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card card-waves">
    <div class="card-header">
        Registration
    </div>
    <div class="card-body">
        <div class="datatable">
            <form method="post" asp-controller="Account" asp-action="Register">
                    <div asp-validation-summary="ModelOnly"></div>

                    <div class="form-group">
                        <label asp-for="Email"></label><br/>
                        <input class="e-input" asp-for="Email"/>
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                    <div>
                        <label asp-for="Password"></label><br/>
                        <input class="e-input" asp-for="Password"/>
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                    <div>
                        <label asp-for="PasswordConfirm"></label><br/>
                        <input class="e-input" asp-for="PasswordConfirm"/>
                        <span class="text-danger" asp-validation-for="PasswordConfirm"></span>
                    </div>
                    <div>
                        <input class="mt-2 btn btn-primary" type="submit" value="Register"/>
                    </div>
                </form>
        </div>
    </div>
</div>
