@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Shops.App.Models.Identity.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card card-waves">
    <div class="card-header">
        Login
    </div>
    <div class="card-body">
        <div class="datatable">
            <form method="post" asp-controller="Account" asp-action="Login"
                  asp-route-returnUrl="@Model.ReturnUrl">
                <div asp-validation-summary="ModelOnly"></div>
                <div>
                    <label asp-for="Email"></label><br/>
                    <input class="e-input" asp-for="Email"/>
                    <span asp-validation-for="Email"></span>
                </div>
                <div>
                    <label asp-for="Password"></label><br/>
                    <input class="e-input" asp-for="Password"/>
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="form-check">
                    <input class="form-check-input" asp-for="RememberMe" id="remember"/>
                    <label class="form-check-label" for="remember" asp-for="RememberMe"></label><br/>
                </div>
                <div>
                    <input class="mt-2 btn btn-primary" type="submit" value="Login"/>
                </div>
            </form>
        </div>
    </div>
</div>